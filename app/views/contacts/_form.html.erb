  <div class="container">

    <div class="row form-group">
      
      <div class="col-md-12" style="background-color: #E8D124; color: black; border-radius: 10px; padding: 20px">
          <%= form_with(model: contact, local: true) do |form| %>
            <% if contact.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

                <ul>
                <% contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="row">

              <div class="col-md-4">
                  <div class="form-field">
                    <%= form.label :name %><br>
                    <%= form.text_field :name %>
                  </div>
              </div>

              <div class="col-md-4">
                  <div class="field">
                    <%= form.label :phone_number %><br>
                    <%= form.text_field :phone_number %>
                  </div>
              </div>

              <div class="col-md-4">
                  <div class="field">
                    <%= form.label :email %><br>
                    <%= form.text_field :email %>
                  </div>
              </div>
              
            </div>

            <div class="row" style="margin-top: 1%; margin-left: 0.1%;">
                <div class="field">
                  <%= form.label :description %><br>
                  <%= form.text_area :description %>
                </div> 
            </div>

            <div class="row" style="margin-top: 1%; margin-left: 0.1%;">
                <div class="field">
                  <%= form.label :example_link %><br>
                  <%= form.text_field :example_link %>
                </div>
                <p><strong>To better assist you, please send a link you would like to use as an example of your future site</strong></p>
            </div>

            <div align="center" class="row" style="margin-top: 3%;">

              <%= form.submit "Submit", class: "btn homebutton" %>
            </div>
          <% end %>
      </div>

    </div>
    
  </div>



