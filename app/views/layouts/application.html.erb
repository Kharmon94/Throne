<!DOCTYPE html>
<html>
  <head>
    <title>Throne Technology</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>
    <link href="https://fonts.googleapis.com/css?family=Balthazar|Roboto+Slab|Source+Serif+Pro" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:900|Vollkorn" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  </head>

  <body>

  <header >

        <nav id="nav" style="margin-bottom: 5%">

              <div class="nav-wrapper">
                <a href="#!" class="brand-logo"><%= image_tag asset_path('logo.png'), :rel => 'icon', :type =>  'image/png', :style => 'width: 200px; height: auto;' %></a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <ul class="right hide-on-med-and-down">

                        <li ><%=link_to 'Home', root_path, :style => "text-decoration: none; color: white;" %></li>

                        <li ><%=link_to 'Services', pages_about_path, :style => "text-decoration: none; color: white;" %></li>

                        <li ><%=link_to 'Clients', projects_path, :style => "text-decoration: none; color: white;" %></li>

                        <li ><%=link_to 'Contact', new_contact_path, :style => "text-decoration: none; color: white;" %></li>

                </ul>
              </div>
        

              <ul class="sidenav" id="mobile-demo">
                        <li ><%=link_to 'Home', root_path, :style => "text-decoration: none; color: black;" %></li> 

                        <li ><%=link_to 'Services', pages_about_path, :style => "text-decoration: none; color: black;" %></li>

                        <li ><%=link_to 'Clients', projects_path, :style => "text-decoration: none; color: black;" %></li>

                        <li ><%=link_to 'Contact', new_contact_path, :style => "text-decoration: none; color: black;" %></li>
              </ul>

        </nav>

   
  </header>
 

 <%= yield %>
 
  <%= render 'partials/footer' %> 
  </body>
</html>
